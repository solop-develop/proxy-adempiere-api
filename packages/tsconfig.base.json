{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "strict": false,
    "allowJs": false,
    "importHelpers": false,
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noLib": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "lib": ["es7"]
  },
  "include": [],
  "exclude": ["../node_modules", "./**/*.spec.ts", "./**/*.d.ts"]
}

{
  "compilerOptions": {
    "target": "es6",
    "strict": false,
    "allowJs": true,
    "importHelpers": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": ["es7"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "migrations/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/**/node_modules",
    "packages/*/node_modules",
    "packages/**/node_modules",
    "./packages/*/node_modules",
    "./packages/**/node_modules",
    "./packages/**/node_modules/",
    "./packages/**/node_modules/*",
    "./packages/**/node_modules/**"
  ]
}
